{
  "name": "justin-wallace-portfolio",
  "description": "The official portfolio of Justin Wallace",
  "version": "1.0",
  "license": "UNLICENSED",
  "author": {
    "name": "Justin Wallace",
    "url": "https://www.justinwallace.dev/"
  },
  "scripts": {
    "dev": "next dev -p 3030",
    "predev": "yarn",
    "build": "next build",
    "start": "next start -p 3090",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx,mdx}\" --fix",
    "format": "prettier --write  --loglevel silent \"src/**/*.{js,jsx,ts,tsx,mdx}\"",
    "create-types": "graphql-codegen --config graphql.config.yml",
    "prettier-watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "check:bundle": "ANALYZE=true yarn build",
    "check:types": "tsc --noEmit"
  },
  "dependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.6.0",
    "@graphql-codegen/cli": "^2.13.12",
    "@graphql-codegen/typed-document-node": "^2.3.7",
    "@graphql-codegen/typescript": "^2.8.2",
    "@graphql-codegen/typescript-operations": "^2.5.7",
    "@graphql-typed-document-node/core": "^3.1.1",
    "@mui/material": "^5.6.2",
    "@next/bundle-analyzer": "^13.0.6",
    "@next/font": "^13.0.6",
    "datocms-structured-text-to-plain-text": "^2.0.4",
    "dotenv": "^16.0.1",
    "framer-motion": "^6.3.11",
    "graphql": "^16.6.0",
    "graphql-request": "^5.0.0",
    "next": "^13.0.7",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-datocms": "^4.0.6",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1",
    "react-is": "^18.2.0",
    "react-swipeable": "^7.0.0",
    "sharp": "^0.30.6",
    "styled-components": "^5.3.10"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@graphql-codegen/typescript-graphql-request": "^4.5.8",
    "@next/eslint-plugin-next": "^13.3.1",
    "@svgr/webpack": "^5.0.0",
    "@types/material-ui": "^0.21.8",
    "@types/node": "^12.0.0",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.11",
    "@types/styled-components": "^5.1.24",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-styled-components": "^2.1.1",
    "eslint": "^7.11.0",
    "eslint-config-next": "^13.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-absolute-only": "^1.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.3.2",
    "react-use": "^17.4.0",
    "typescript": "^4.0.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.79.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mdx}": [
      "eslint --fix",
      "prettier --write --loglevel silent"
    ]
  },
  "nextBundleAnalysis": {
    "budget": null,
    "budgetPercentIncreaseRed": 20,
    "showDetails": true
  }
}
